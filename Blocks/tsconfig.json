{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
	"sourceMap": false,

        "outFile": "main.js",
    "typeRoots": [
      "node_modules/@types"
    ],
      "types": [],
	  
    // leave imports as they are
    "module": "esnext",
    // do not transpile stuff like classes, async/await, ...
    "target": "esnext"
  },
  exclude": [
    "node_modules",
    "obj",
    "bin"
  ]
}